extends layout
block content
  .container-fluid
    .items.col-md-7.col-md-offset-1.col-xs-7.col-xs-offset-1
      each cat in categories
        .well.row
          legend
            =cat.title
          each item in items
            if item._category == cat.title
              .grid-card
                .col-lg-3.col-md-3.col-xs-6.thumbnail.padded
                  img(src=item.imageUrl)
                  .caption
                    legend.name
                      =item.title
